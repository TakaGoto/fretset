[:div.container

  [:div.form-header [:h1 "Login"]
    [:div.flash-message
      [:ul
        (prn *view-context*)
        (display-flash (:flash *view-context*) :errors)]]]

  [:div.form
    [:form {:action "/user/login" :method "post"}
      [:div.form-field
        [:label "Email"]
        [:input {:type "text" :name "email"}]]

      [:div.form-field
        [:label "Password"]
        [:input {:type "password" :name "password"}]]

      [:input.button {:type "submit" :value "Login"}]]]]
